<% content_for(:title, t('.title')) %>
<div class="container pt-5">
  <div class="menu-detail-board">
    <article class="card">
      <div class="card-body d-flex">
        <div class="col-md-3">
          <!-- image_tag @menu.menu_image_url, width: "300", height: "200", class: "card-img-top img-fluid" -->
        </div>
        <div class="col-md-9">
          <h3 style="display: inline;"><%= @menu.name %></h3>
          <div class='d-flex justify-content-end'>
            <%= link_to "#", id: "button-edit-#{@menu.id}" do %>
              <i class='bi bi-pencil-fill'></i>
            <% end %>
            <%= link_to "#", id: "button-delete-#{@menu.id}", class: "ms-2" do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <h5><%= t('.material') %></h5>
        <p><%= simple_format(@menu.material) %></p>
        <h5><%= t('.process') %></h5>
        <p><%= simple_format(@menu.process) %></p>
      </div>
    </article>
  </div>
</div>