<div class="menu-board">
  <div id="menu-id-<%= menu.id %>">
    <div class="card">
      <%= image_tag menu.menu_image_url, class: "card-img-top", width: "300", height:"200" %>
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-name">
            <%= link_to menu.name, menu_path(menu) %>
          </h4>
          <div class='ms-auto'>
            <% if current_user && current_user.own?(menu) %>
              <%= link_to edit_menu_path(menu), id: 'button-edit-#{menu.id}' do %>
                <i class="bi bi-pencil-fill"></i>
              <% end %>
              <%= link_to menu_path(menu), id: 'button-delete-#{menu.id}', data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } do %>
                <i class="bi bi-trash-fill"></i>
              <% end %>
            <% elsif current_user %>
              <%= render 'like_buttons', { menu: menu } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>