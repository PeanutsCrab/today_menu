<ul class="list-inline">
  <li>
    <%= form_with model: search_form, url: search_menus_path, scope: :q, method: :get, html: { class: 'form-inline' } do |f| %>
      <table>
        <tr>
          <td>
            <div data-controller="autocomplete" data-autocomplete-url-value="/menus/autocomplete" style="position: relative;">
              <%= f.search_field :name, placeholder: t('menus.search_form.placeholders.name'), class: 'form-control', data: { autocomplete_target: "input" } %>
              <ul class="autocomplete-list" data-autocomplete-target="results" style="display: none"></ul>
            </div>
          </td>
          <td>
            <%= f.search_field :material, placeholder:  t('menus.search_form.placeholders.material'), class: 'form-control' %>
          </td>
          <td>
            <%= f.search_field :tag_name, placeholder: t('menus.search_form.placeholders.tag_name'), class: 'form-control' %>
          </td>
          <td>
            <%= f.submit t('menus.search_form.submit'), class: "btn btn-primary form-control" %>
          </td>
        </tr>
      </table>
    <% end %>
  </li>
</ul>